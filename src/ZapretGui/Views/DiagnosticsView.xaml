<UserControl x:Class="ZapretGui.Views.DiagnosticsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
  <Border Background="#202225" Padding="12" CornerRadius="6">
    <StackPanel>
      <TextBlock Text="Diagnostics" FontSize="18" FontWeight="Bold" />
      <TextBlock Text="История вызовов CLI" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,10" />
      <ScrollViewer VerticalScrollBarVisibility="Auto" Height="420">
        <ItemsControl ItemsSource="{Binding Entries}">
          <ItemsControl.ItemTemplate>
            <DataTemplate>
              <Border BorderBrush="#33363e" BorderThickness="1" Padding="8" Margin="0,0,0,8" CornerRadius="4">
                <StackPanel>
                  <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,2">
                    <Ellipse Width="10" Height="10"
                             Fill="{Binding Ok, Converter={StaticResource SuccessToBrush}}" />
                    <TextBlock Text="{Binding Ok, Converter={StaticResource SuccessToText}}"
                               Margin="6,0,0,0"
                               VerticalAlignment="Center"
                               FontWeight="Bold" />
                    <TextBlock Text="{Binding Timestamp, StringFormat={}{0:HH:mm:ss}}"
                               Foreground="{StaticResource TextSecondary}"
                               Margin="8,0,0,0" />
                    <TextBlock Text="{Binding ExitCode, StringFormat=exit {0}}"
                               Foreground="{StaticResource TextSecondary}"
                               Margin="6,0,0,0" />
                  </StackPanel>
                  <TextBlock Text="{Binding Command}" FontWeight="Bold" />
                  <TextBlock Text="{Binding Message}" Foreground="{StaticResource TextSecondary}" />
                  <TextBlock Text="{Binding Result}" TextWrapping="Wrap" Foreground="{StaticResource TextSecondary}" />
                </StackPanel>
              </Border>
            </DataTemplate>
          </ItemsControl.ItemTemplate>
        </ItemsControl>
      </ScrollViewer>
    </StackPanel>
  </Border>
</UserControl>
