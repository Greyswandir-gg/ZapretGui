<UserControl x:Class="ZapretGui.Views.StrategiesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="240" />
      <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>

    <StackPanel Grid.Column="0" Margin="0,0,12,0">
      <TextBlock Text="Стратегии" FontSize="18" FontWeight="Bold" />
      <TextBlock Text="Доступные BAT стратегии" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,8" />

      <ListBox ItemsSource="{Binding Strategies}"
               SelectedItem="{Binding SelectedStrategy}"
               Background="#202225"
               BorderBrush="#303238"
               Foreground="{StaticResource TextPrimary}"
               Height="360">
        <ListBox.ItemTemplate>
          <DataTemplate>
            <StackPanel Orientation="Vertical" Margin="6">
              <TextBlock Text="{Binding DisplayName}" FontSize="14" />
              <TextBlock Text="{Binding FileName}" Foreground="{StaticResource TextSecondary}" FontSize="12" />
            </StackPanel>
          </DataTemplate>
        </ListBox.ItemTemplate>
      </ListBox>

      <Button Content="Обновить" Command="{Binding RefreshStatusCommand}" />
    </StackPanel>

    <StackPanel Grid.Column="1">
      <TextBlock Text="Управление" FontSize="18" FontWeight="Bold" />
      <TextBlock Text="Запуск и остановка zapret" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,12" />

      <Border Background="#202225" Padding="12" CornerRadius="6" Margin="0,0,0,12">
        <StackPanel>
          <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
            <Ellipse Width="12" Height="12" Fill="{Binding IsRunning, Converter={StaticResource RunningToBrush}}" />
            <TextBlock Text="{Binding IsRunning, Converter={StaticResource RunningToText}}"
                       Margin="8,0,0,0"
                       VerticalAlignment="Center"
                       FontWeight="Bold" />
          </StackPanel>
          <TextBlock Text="{Binding StatusMessage}" Foreground="{StaticResource TextSecondary}" Margin="0,8,0,0" />
        </StackPanel>
      </Border>

      <WrapPanel Margin="0,0,0,8" ItemWidth="120" ItemHeight="40">
        <Button Content="Запустить" Width="120" Command="{Binding RunSelectedCommand}" />
        <Button Content="Остановить" Width="120" Command="{Binding StopCommand}" />
        <Button Content="Применить стратегию" Width="160" Command="{Binding RunSelectedCommand}" />
      </WrapPanel>

      <Border Background="#202225" Padding="12" CornerRadius="6">
        <TextBlock Text="Подсказка: выберите .bat из списка слева и нажмите «Запустить»." Foreground="{StaticResource TextSecondary}" TextWrapping="Wrap" />
      </Border>

      <TextBlock Text="{Binding DebugState}"
                 Foreground="{StaticResource TextSecondary}"
                 FontSize="10"
                 Margin="0,8,0,0" />
    </StackPanel>
  </Grid>
</UserControl>
